extends ../node_modules/jade-bootstrap/_bootstrap

head
	title=title
block body
	+navbar("Colenso","dropdown_menu")
		+nav_item("/") Home  
			span
				+icon("home")
		+nav_item("/search","active") Search  
			span
				+icon("search")
		+nav_item("/add") Add  
			span
				+icon("plus")
		
	h1 #{title}
	
	.container
		//need to think of how to push search button next to input
		//need to know how to change the sizes of them.
		//NEED TO MAKE SEARCH QUERY WORK
		
		h4 Title of Document
		form(action="/search", method="get")
			input(type="text",name="title",placeholder="Enter title")
			input(type="submit",value="search")
		
		h3 OR
		h4 Author of Document
		form(action="/search", method="get")
			input(type="text",name="author",placeholder="Enter Author")
			br
			br
			+radio-toggle-default("radOptions6",[{caption:"None"},{caption:"AND"},{caption:"NOT"}],0)
			br
			br
			input(type="submit",value="search")
		h3 OR
		h4 Find text in Document
		form(action="/search", method="get")
			input(type="text",name="text",placeholder="Enter Text")
			input(type="submit",value="search")
			
		if searchResult
			+list-group-custom()
				-
				each val in searchResult
					+list-group-item(val,"")
						h4.list-group-item-heading=val	
		
		.container
		link(rel='stylesheet', href='/stylesheets/style.css')
